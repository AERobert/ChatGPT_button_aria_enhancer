{
    "manifest_version": 3,
    "name": "Accessible and Enhanced ChatGPT",
    "version": "0.2.1",
    "description": "adds features to make the ChatGPT web app more friendly for screen reader users..",
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://chat.openai.com/*"
            ],
            "js": [
                "labelButtons.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [ "audio/*.mp3" ],
            "matches": [ "*://chat.openai.com/*" ]
        }
    ]
}